@{
    var headerTitle = ViewData["HeaderTitle"] as string ?? "Dashboard";
    var breadcrumbFirst = ViewData["BreadcrumbFirst"] as string ?? "Home";
    var breadcrumActive = ViewData["BreadcrumbActive"] as string ?? "Dashboard v1";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0 text-dark">@headerTitle</h1>
        </div> 
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">@breadcrumbFirst</a></li>
                <li class="breadcrumb-item active">@breadcrumActive</li>
            </ol>
        </div> 
    </div> 
</div> 