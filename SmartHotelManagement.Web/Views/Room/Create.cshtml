@model SmartHotelManagement.Contract.Request.CreateRoomRequest

@{
    ViewData["HeaderTitle"] = "Create Room";
    ViewData["BreadcrumbFirst"] = "Home";
    ViewData["BreadcrumbActive"] = "Rooms Add";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Add Room</h3>
            </div>
            <form class="form-horizontal" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="RoomNumber">Room Number</label>
                        <div class="col-sm-4">
                            <input type="text" asp-for="RoomNumber" class="form-control" placeholder="Room Number" />
                        </div>
                        <div>
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        </div>

                        <label class="col-sm-2 col-form-label">Room Type</label>
                        <div class="col-sm-4">
                            <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypeId">
                                <option value="">Select Room Type</option>
                            </select>
                        </div>
                        </div>
                        

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="FloorNo">Floor Number</label>
                        <div class="col-sm-4">
                            <input type="number" asp-for="FloorNo" class="form-control" placeholder="Floor Number" />
                        </div>
                        <div>
                            <span asp-validation-for="FloorNo" class="text-danger"></span>
                        </div>

                        <label class="col-sm-2 col-form-label" asp-for="Capacity">Capacity in person</label>
                        <div class="col-sm-4">
                            <input type="number" asp-for="Capacity" class="form-control" placeholder="Capacity in person" />
                        </div>
                        <div>
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="BaseRate">Base Rate</label>
                        <div class="col-sm-4">
                            <input type="number" asp-for="BaseRate" class="form-control" placeholder="Base Rate" />
                        </div>
                        <div>
                            <span asp-validation-for="BaseRate" class="text-danger"></span>
                        </div>

                        <label class="col-sm-2 col-form-label" asp-for="Notes">Notes</label>
                        <div class="col-sm-4">
                            <textarea asp-for="Notes" class="form-control" placeholder="Notes"></textarea>
                        </div>
                        <div>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>

                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Status">Room Status</label>
                        <div class="col-sm-4">
                            <select asp-for="Status" class="form-control">
                                <option value="">Select Room Status</option>
                                <option value="Available">Available</option>
                                <option value="Reserved">Reserved</option>
                                <option value="Occupied">Occupied</option>
                                <option value="Maintenance">Maintenance</option>
                            </select>
                        </div>
                    
                        <div class="offset-sm-2 col-sm-4">
                            <div class="form-check">
                                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                <label class="form-check-label" asp-for="IsActive">Room Status</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="RoomImage">Room Image</label>
                        <div class="col-sm-10">
                            <input type="file" asp-for="RoomImage" name="imageFile" class="form-control" accept="image/*" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Save</button>
                    <a asp-action="Index" class="btn btn-default float-right">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
