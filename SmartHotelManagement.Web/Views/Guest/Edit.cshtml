@model SmartHotelManagement.Contract.Request.UpdateGuestRequest


@{
    ViewData["HeaderTitle"] = "Edit Guests";
    ViewData["BreadcrumbFirst"] = "Home";
    ViewData["BreadcrumbActive"] = "Edit Guest";
}
<div class="row">
    <div class="col">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Edit Guest</h3>
            </div>
            <div class="card-body">
                <form class="form-horizontal" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="GuestId" />
                    <input type="hidden" asp-for="GuestImage" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="FirstName">First Name</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="LastName">Last Name</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="Address">Address</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Address" class="form-control" placeholder="Your Address.."></textarea>
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div> 
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="PhoneNumber">Phone Number</label>
                            <div class="col-sm-10">
                                <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Last Name" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="IDProofType">ID Type</label>
                            <div class="col-sm-4">
                                <select asp-for="IDProofType" class="form-control">
                                    <option value="">Select ID Type</option>
                                    <option>Passport</option>
                                    <option>NID</option>
                                </select>
                            </div>
                            <label class="col-sm-2 col-form-label" asp-for="IDProofNumber">ID Number</label>
                            <div class="col-sm-4">
                                <input type="text" asp-for="IDProofNumber" class="form-control" placeholder="ID Proof Number" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="GuestImage">Guest Photo</label>
                            <div class="col-sm-10">
                                @* Show current image preview *@
                                @if (!string.IsNullOrEmpty(Model.GuestImage))
                                {
                                    <div class="mb-2">
                                        <img src="@(Url.Content("~" + Model.GuestImage))" style="width:80px;height:80px;border-radius:8px;object-fit:cover;" alt="Current photo" />
                                    </div>
                                }
                                <input type="file" asp-for="GuestImage" name="imageFile" class="form-control" accept="image/*" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-sm-2 col-sm-10">
                                <div class="form-check">
                                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                    <label class="form-check-label" asp-for="IsActive">Guest Status</label>
                                </div>
   
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">Update</button>
                        <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
}