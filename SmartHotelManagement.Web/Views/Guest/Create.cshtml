@model SmartHotelManagement.Contract.Request.CreateGuestRequest

@{
    ViewData["HeaderTitle"] = "Create Guest";
    ViewData["BreadcrumbFirst"] = "Home";
    ViewData["BreadcrumbActive"] = "Guests Add";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Add New Guest</h3>
            </div>
            <form class="form-horizontal" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="FirstName">First Name</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="LastName">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Address">Address</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Address" class="form-control" placeholder="Your Address.."></textarea>
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Nationality">Nationality</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Nationality" class="form-control" placeholder="Your Nationality" />
                        </div>
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="PhoneNumber">Phone Number</label>
                        <div class="col-sm-4">
                            <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        <label class="col-sm-2 col-form-label" asp-for="Email">Email Address</label>
                        <div class="col-sm-4">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email Address" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="DateOfBirth">Birth Date</label>
                        <div class="col-sm-4">
                            <input type="date" asp-for="DateOfBirth" class="form-control" placeholder="Birth Date" />
                        </div>

                        <label class="col-sm-2 col-form-label" asp-for="Gender"></label>
                        <div class="col-sm-4">
                            <select asp-for="Gender" class="form-control">
                                <option value="">Select</option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="IDProofType">ID Type</label>
                        <div class="col-sm-4">
                            <select asp-for="IDProofType" class="form-control">
                                <option value="">Select ID Type</option>
                                <option>Passport</option>
                                <option>NID</option>
                            </select>
                        </div>
                        <label class="col-sm-2 col-form-label" asp-for="IDProofNumber">ID Number</label>
                        <div class="col-sm-4">
                            <input type="text" asp-for="IDProofNumber" class="form-control" placeholder="ID Proof Number" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="GuestImage">Guest Photo</label>
                        <div class="col-sm-10">
                            <input type="file" asp-for="GuestImage" name="imageFile" class="form-control" accept="image/*" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <div class="form-check">
                                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                <label class="form-check-label" asp-for="IsActive">Guest Status</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Save</button>
                    <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
